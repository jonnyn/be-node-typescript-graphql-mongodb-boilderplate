{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "src/*": [ "src/*" ],
      "connectors/*": [ "src/connectors/*" ],
      "exceptions/*": [ "src/exceptions/*" ],
      "middleware/*": [ "src/middleware/*" ],
      "routes/*": [ "src/routes/*" ],
      "utils/*": [ "src/utils/*" ],
    },
    "resolveJsonModule": true
  },
  "include": [ "./src/**/*" ],
}
