{
  "name": "tipbox-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "node -r dotenv/config dist/index.js",
    "dev": "NODE_ENV='development' yarn run watch",
    "build": "yarn run build:ts && yarn run test && yarn copy:graphql",
    "build:ts": "tsc",
    "postbuild:ts": "yarn run lint:fix && yarn run clean:tests",
    "copy:graphql": "cd ./src && find * -name \\*.graphql -exec cp {} ../dist/{} \\;",
    "clean": "rimraf build coverage",
    "clean:tests": "find dist -name \"*.spec.js\" -delete -o -name \"*.spec.js.map\" -delete -o -name \"*.test.js\" -delete -o -name \"*.test.js.map\" -delete",
    "test": "jest --colors",
    "watch": "concurrently -k yarn:watch:*",
    "watch:ts": "nodemon --watch \"src/**/*.ts\" --exec \"node\" --inspect -r dotenv/config -r ts-node/register \"src/index.ts\"",
    "watch:test": "yarn run test --watch",
    "rebuild": "yarn run build",
    "prerebuild": "yarn run clean",
    "lint": "yarn run lint:check",
    "lint:fix": "yarn run lint:check --fix",
    "lint:check": "eslint --ext .js,.ts,.jsx,.tsx ./src",
    "lint:test": "yarn run lint:fix && yarn run test"
  },
  "dependencies": {
    "apollo-server-express": "^2.21.1",
    "async-retry": "^1.3.1",
    "aws-sdk": "^2.918.0",
    "axios": "^0.21.0",
    "bunyan": "^1.8.15",
    "class-validator": "^0.13.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.5.0",
    "graphql-request": "^3.4.0",
    "graphql-tools": "^7.0.5",
    "helmet": "^4.4.1",
    "http-status": "^1.5.0",
    "jsonwebtoken": "^8.5.1",
    "jwk-to-pem": "^2.0.5",
    "lodash": "^4.17.21",
    "mime-types": "^2.1.29",
    "mongoose": "^5.12.12",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-s3": "^2.9.0",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "type-graphql": "^1.1.1",
    "url-join": "^4.0.1",
    "uuid": "^8.3.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/async-retry": "^1.4.2",
    "@types/bunyan": "^1.8.6",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/jwk-to-pem": "^2.0.0",
    "@types/lodash": "^4.14.170",
    "@types/mime-types": "^2.1.0",
    "@types/morgan": "^1.9.2",
    "@types/multer": "^1.4.5",
    "@types/multer-s3": "^2.7.9",
    "@types/node": "^14.14.33",
    "@types/node-fetch": "^2.5.10",
    "@types/request": "^2.48.5",
    "@types/url-join": "^4.0.0",
    "@types/uuid": "^8.3.0",
    "@types/xml2js": "^0.4.6",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.27.0",
    "jest": "^27.0.3",
    "jest-junit": "^12.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
